{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "outDir": "build/src",
    "declarationDir": "build/header",
    "paths": {
      "@yapm/*": [
        "./lib/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "lib",
    "assets",
    "node_modules"
  ]
}